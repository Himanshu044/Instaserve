<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateServiousProviderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:text="Create Servious Provider Account"
            android:gravity="center_horizontal" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:src="@drawable/person" />

        <EditText
            android:id="@+id/serviousprovider_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:hint="Servious Provider Name"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/servious_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30sp"
            android:hint="Servious Name or Your Job"
            android:inputType="text"
            android:padding="10dp"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Contact Number"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/whatapp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Whatapp NUmber"
            android:inputType="number"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Title Name for Shop or servious"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/addar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Aadhar Number"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/charge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Servious Charge"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Locality"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15sp"
            android:padding="10dp"
            android:hint="Address"
            android:inputType="text"
            android:textColorHint="@android:color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:text="Save" />
    </LinearLayout>

</ScrollView>