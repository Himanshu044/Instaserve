<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="53dp"
            android:layout_height="46dp"
            android:padding="5dp"
            android:src="@drawable/back_button" />

        <TextView
            android:id="@+id/fontfa"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/aclonica"
            android:text="Create Account"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Name"
                app:hintTextColor="@color/colorPrimary"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="2dp"
                android:id="@+id/username"
                app:startIconDrawable="@drawable/user_name"
                app:startIconTint="#000000"
                android:textColorHint="#000000"
                app:endIconMode="clear_text"
                app:endIconTint="#000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/muli_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Email Id"
                app:hintTextColor="@color/colorPrimary"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="2dp"
                android:id="@+id/email"
                app:startIconDrawable="@drawable/user_person"
                app:startIconTint="#000000"
                android:textColorHint="#000000"
                app:endIconMode="clear_text"
                app:endIconTint="#000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/muli_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Mobile NUmber"
                app:hintTextColor="@color/colorPrimary"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="2dp"
                app:startIconDrawable="@drawable/user_phone"
                app:startIconTint="#000000"
                android:id="@+id/phoneNumber"
                android:textColorHint="#000000"
                app:endIconMode="clear_text"
                app:endIconTint="#000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/muli_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="Enter Password"
                app:hintTextColor="@color/colorPrimary"
                app:boxStrokeColor="@color/colorPrimary"
                app:boxStrokeWidth="2dp"
                app:startIconDrawable="@drawable/user_password"
                app:startIconTint="#000000"
                android:id="@+id/password"
                android:textColorHint="#000000"
                app:endIconMode="password_toggle"
                app:endIconTint="#000000">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/muli_light"
                    />

            </com.google.android.material.textfield.TextInputLayout>t>


            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create"
                android:id="@+id/submit"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/black"
                android:layout_marginTop="50dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

